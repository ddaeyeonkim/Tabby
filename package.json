{
  "name": "tabby",
  "version": "0.0.1",
  "description": "",
  "main": "build/main.js",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "electron": "tsc --project ./electron/tsconfig.json && wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "start": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "test:unit": "vitest",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "electron:builder": "electron-builder",
    "app:build": "npm run build:for:electron && npm run electron:builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write web/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dexie": "^3.2.4",
    "pinia": "^2.1.7",
    "reflect-metadata": "^0.2.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.19",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.1",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue-tsc": "^1.8.25",
    "wait-on": "^7.2.0"
  }
}
